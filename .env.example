# 外包小窩系統 - 環境變數範例
# 複製此檔案為 .env 並填入實際值

# === 資料庫配置 ===
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bidding_test
DB_USER=your_username
DB_PASSWORD=your_secure_password_here

# === 應用程式配置 ===
# Session Secret Key (生成方式: python -c "import secrets; print(secrets.token_hex(32))")
# ⚠️ 務必在生產環境使用強隨機密鑰，不可使用預設值
SESSION_SECRET_KEY=your-unique-and-secure-session-key-here

# CSRF Secret Key (生成方式: python -c "import secrets; print(secrets.token_hex(32))")
# 如未設置，將使用 SESSION_SECRET_KEY
CSRF_SECRET_KEY=your-unique-csrf-secret-key-here

# Session 設置
SESSION_MAX_AGE=3600  # 1小時 (秒)
SESSION_HTTPS_ONLY=False  # 生產環境設為 True

# === 檔案上傳配置 ===
MAX_PROPOSAL_SIZE=10485760  # 10MB (bytes)
MAX_DELIVERABLE_SIZE=20971520  # 20MB (bytes)
UPLOAD_DIR=uploads

# === 應用程式環境 ===
ENVIRONMENT=development  # development | production
DEBUG=True  # 生產環境設為 False

# === 安全性配置 ===
# CORS 允許的來源 (逗號分隔)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Rate Limiting (速率限制)
RATE_LIMIT_ENABLED=True  # 建議在生產環境啟用
# 預設限制：60/minute (全局)
# 特定路由限制：
#   - /login: 5/minute
#   - /register: 3/minute
#   - /submit_bid: 10/minute
#   - /upload: 10/minute

# === 日誌配置 ===
LOG_LEVEL=DEBUG  # DEBUG | INFO | WARNING | ERROR
LOG_FILE=logs/app.log
LOG_MAX_SIZE=5242880  # 5MB
LOG_BACKUP_COUNT=3

# === 評價系統配置 ===
REVIEW_DEADLINE_DAYS=14  # 結案後幾天內可評價

# === 通知配置 (選用) ===
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USERNAME=your-email@example.com
# EMAIL_PASSWORD=your-email-password
# EMAIL_FROM=noreply@bidding-system.com
